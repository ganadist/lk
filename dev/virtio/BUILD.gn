config("virtio_config") {
  visibility = [ ":virtio" ]
  include_dirs = [ "include" ]
}

module("virtio") {
  public_configs = [ ":virtio_config" ]
  configs += [ "//kernel/kernel:enable_vm" ]
  sources = [
    "virtio.c",
    "virtio_priv.h",
  ]
  deps = [
    "//kernel/dev/interrupt",
    "//kernel/lib/libc",
  ]
}
