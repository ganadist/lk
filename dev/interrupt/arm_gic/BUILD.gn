config("arm_gic_config") {
  visibility = [ ":arm_gic" ]
  include_dirs = [ "include" ]
  defines = [ "WITH_DEV_INTERRUPT_ARM_GIC=1" ]
}

module("arm_gic") {
  public_configs = [ ":arm_gic_config" ]
  include_dirs = [
    "//kernel/platform/qemu-virt/include",
    "//kernel/dev/interrupt/include",
  ]
  sources = [
    "arm_gic.c",
  ]
  deps = [
    "//kernel/lib/libc",
  ]
}
