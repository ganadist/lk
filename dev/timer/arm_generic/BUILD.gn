config("arm_generic_config") {
  visibility = [ ":arm_generic" ]
  include_dirs = [ "include" ]
}

module("arm_generic") {
  public_configs = [ ":arm_generic_config" ]
  defines = [ "PLATFORM_HAS_DYNAMIC_TIMER=1" ]
  sources = [
    "arm_generic_timer.c",
  ]
  deps = [
    "//kernel/dev/interrupt",
    "//kernel/lib/fixed_point",
    "//kernel/lib/libc",
  ]
}
