import("//gnbuild/config.gni")

config("enable_pcie") {
  if (enable_pcie) {
    defines = [ "WITH_DEV_PCIE=1" ]
  } else {
    defines = [ "WITH_DEV_PCIE=0" ]
  }
}

config("pcie_config") {
  visibility = [ ":pcie" ]
  include_dirs = [ "include" ]
  configs = [ ":enable_pcie" ]
}

module("pcie") {
  public_configs = [ ":pcie_config" ]
  configs += [ "//kernel/kernel:enable_vm" ]
  public = [
    "include/dev/pcie/pcie.h",
    "include/dev/pcie/pcie_caps.h",
    "include/dev/pcie/pcie_constants.h",
    "include/dev/pcie/pcie_irqs.h",
  ]
  sources = [
    "debug.c",
    "pcie.c",
    "pcie_caps.c",
    "pcie_irqs.c",
    "pcie_topology.c",
    "pcie_priv.h",
  ]
  deps = [
    "//kernel/lib/console",
    "//kernel/lib/libc",
  ]
  public_deps = [
    "//kernel/dev/interrupt",
  ]
}
