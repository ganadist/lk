config("bootargs_config") {
  visibility = [ ":bootargs" ]
  include_dirs = [ "include" ]
}

module("bootargs") {
  public_configs = [ ":bootargs_config" ]
  configs += [ "//kernel/kernel:enable_vm" ]
  public = [
    "include/lib/bootargs.h",
  ]
  sources = [
    "bootargs.c",
  ]
}
