  public_configs = [ ":miniheap_config" ]
  public = [
    "include/lib/miniheap.h",
  ]
  include_dirs = [
    "//kernel/lib/heap/include",
    "//kernel/lib/io/include",
    "//kernel/lib/libc/include",
  ]
  sources = [
    "miniheap.c",
  ]
}
