import("//gnbuild/config.gni")

config("enable_console") {
  if (enable_console) {
    defines = [ "WITH_LIB_CONSOLE=1" ]
  } else {
    defines = [ "WITH_LIB_CONSOLE=0" ]
  }
}

module("console") {
  public_configs = [ ":enable_console" ]
  sources = [
    "console.c",
  ]
  deps = [
    "//kernel/lib/libc",
  ]
}
