import("//gnbuild/config.gni")

config("enable_shell") {
  if (enable_shell) {
    defines = [ "WITH_APP_SHELL=1" ]
  } else {
    defines = [ "WITH_APP_SHELL=0" ]
  }
}

config("shell_config") {
  visibility = [ ":shell" ]
  configs = [ ":enable_shell" ]
}

module("shell") {
  public_configs = [ ":shell_config" ]
  sources = [
    "shell.c",
  ]
  deps = [
    "//kernel/lib/console",
    "//kernel/lib/libc",
  ]
}
